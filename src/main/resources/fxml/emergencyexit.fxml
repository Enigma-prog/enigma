<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/enigma.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="com.radixpro.enigma.ui.shared.controllers.EmergencyExit">
    <children>
        <VBox layoutX="-2.0" prefHeight="400.0" prefWidth="600.0">
            <children>
                <Pane prefHeight="337.0" prefWidth="600.0" styleClass="errorpane">
                    <children>
                        <Label layoutX="80.0" layoutY="24.0" styleClass="errortitletext" text="%emergencyexit.title"
                               textAlignment="CENTER">
                            <font>
                                <Font size="48.0"/>
                            </font>
                        </Label>
                        <Label fx:id="lblExplanation" layoutX="80.0" layoutY="122.0" text="Label" wrapText="true"/>
                    </children>
                </Pane>
                <ButtonBar prefHeight="64.0" prefWidth="600.0" styleClass="errorpane">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#onExit" text="%emergencyexit.close"/>
                    </buttons>
                </ButtonBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
