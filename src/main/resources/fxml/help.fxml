<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="530.0" stylesheets="@../css/enigma.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.radixpro.enigma.ui.shared.Help">
    <children>
        <VBox prefHeight="600.0" prefWidth="530.0">
            <children>
                <Pane prefHeight="80.0" prefWidth="530.0" styleClass="titlepane">
                    <children>
                        <Label fx:id="lblHelpTitle" prefHeight="80.0" prefWidth="530.0" styleClass="titletext"
                               text="lblHelpTitle">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
               </children>
            </Pane>
            <Pane prefHeight="490.0" prefWidth="530.0">
               <children>
                   <WebView fx:id="helpText" prefHeight="490.0" prefWidth="530.0"/>
               </children>
            </Pane>
            <Pane prefHeight="30.0" prefWidth="530.0" styleClass="helppane">
               <children>
                   <Button fx:id="closeBtn" layoutX="476.0" layoutY="2.0" mnemonicParsing="false" onAction="#onClose"
                           text="Close"/>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
