<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/enigma.css"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="com.radixpro.enigma.ui.charts.controllers.ChartsSearch">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <Pane prefHeight="55.0" prefWidth="600.0" styleClass="titlepane">
               <children>
                  <Label fx:id="lblTitle" layoutX="14.0" layoutY="8.0" styleClass="titletext"
                         text="%ui.charts.search.pagetitle"/>
               </children>
            </Pane>
            <Pane prefHeight="301.0" prefWidth="600.0">
               <children>
                  <Label layoutX="14.0" layoutY="14.0" text="%ui.charts.search.instruction"/>
                  <TextField fx:id="searchArg" layoutX="14.0" layoutY="41.0" prefHeight="25.0" prefWidth="496.0"/>
                  <Button layoutX="522.0" layoutY="41.0" mnemonicParsing="false" onAction="#onSearch"
                          text="%ui.shared.btn.search"/>
                  <ListView fx:id="lvSearchResults" layoutX="14.0" layoutY="73.0" prefHeight="200.0" prefWidth="496.0"/>
               </children>
            </Pane>
            <ButtonBar maxWidth="-Infinity" prefHeight="40.0" prefWidth="580.0">
               <buttons>
                  <Button mnemonicParsing="false" text="%ui.shared.btn.help"/>
                  <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancel" text="%ui.shared.btn.cancel"/>
                  <Button fx:id="btnOk" mnemonicParsing="false" onAction="#onSelectOk" text="%ui.shared.btn.ok"/>
               </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </children>
</AnchorPane>
