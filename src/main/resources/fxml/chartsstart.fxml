                 </children>
             </Pane>
         </center>
         <bottom>
            <Pane prefHeight="47.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
                <children>
                    <ButtonBar prefHeight="40.0" prefWidth="200.0">
                        <buttons>
                            <Button id="btnChartNew" mnemonicParsing="false" onAction="#onNewChart" prefHeight="25.0"
                                    prefWidth="153.0" text="%ui.charts.start.btn.new"/>
                            <Button id="btnChartSearch" mnemonicParsing="false" prefHeight="25.0" prefWidth="153.0"
                                    text="Search for chart"/>
                            <Button layoutX="135.0" layoutY="18.0" mnemonicParsing="false" text="Close"/>
                            <Button layoutX="50.0" layoutY="18.0" mnemonicParsing="false" text="Help"/>
