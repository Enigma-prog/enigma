<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="750.0" prefWidth="1000.0" stylesheets="@../css/enigma.css"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.radixpro.enigma.ui.charts.ChartsStart">
    <children>
        <BorderPane layoutY="-4.0" prefHeight="756.0" prefWidth="1000.0">
            <top>
                <Pane prefHeight="102.0" prefWidth="1000.0" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="0.0" prefWidth="1000.0" styleClass="titlepane"/>
